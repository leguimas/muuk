<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
	<persistence-unit name="dextra-rdv-pu">
		<jta-data-source>java:/DextraRdvDS</jta-data-source>
		<jar-file>../dominio-1.0.0-SNAPSHOT.jar</jar-file>

		<properties>
			<property name="jboss.entity.manager.jndi.name" value="confidence-pu" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />

			<!-- Configuracoes de performance -->
			<property name="hibernate.cache.use_second_level_cache" value="false"/>
			<property name="hibernate.cache.use_query_cache" value="false" />
			<property name="hibernate.transaction.manager_lookup_class" value="org.hibernate.transaction.JBossTransactionManagerLookup"/>

			<property name="hibernate.jdbc.batch_size" value="20"/>
			<property name="hibernate.default_batch_fetch_size" value="8"/>
		</properties>
	</persistence-unit>
</persistence>
