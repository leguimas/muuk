<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<welcome-file-list>
		<welcome-file>redirect-to-index.html</welcome-file>
	</welcome-file-list>

	<!-- Resteasy custom injector factory -->
	<context-param>
		<param-name>resteasy.injector.factory</param-name>
		<param-value>br.com.dextra.common.rest.ExtendedInjectorFactory</param-value>
	</context-param>
	<context-param>
		<param-name>resteasy.servlet.mapping.prefix</param-name>
		<param-value>/s</param-value>
	</context-param>
	<context-param>
		<param-name>security.configuration.bsh</param-name>
		<param-value>security.configuration.bsh</param-value>
	</context-param>

	<!-- Resteasy configuration to RestServices -->
	<servlet>
		<servlet-name>Resteasy</servlet-name>
		<servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>br.com.dextra.config.rest.Application</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>Resteasy</servlet-name>
		<url-pattern>/s/*</url-pattern>
	</servlet-mapping>

	<!-- Authentication Filter -->
	<filter>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>br.com.dextra.common.security.login.DextraAuthenticationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/index.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/s/*</url-pattern>
	</filter-mapping>

	<!-- Servlet para realizacao de login no LDAP -->
	<servlet>
		<servlet-name>LDAPAuthenticationServlet</servlet-name>
		<servlet-class>br.com.dextra.common.security.login.LDAPAuthenticationServlet</servlet-class>
		<init-param>
			<param-name>ldapURL</param-name>
			<param-value>ldap://zico:389/</param-value>
		</init-param>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>LDAPAuthenticationServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<!-- Servlet de logout -->
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>br.com.dextra.common.security.login.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

</web-app>
